enum Permission {
  ADMIN
  USER
  PERMISSIONUPDATE
}

type User {
  id: ID! @id @unique
  name: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: Float
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  permissions: [Permission] @scalarList(strategy: RELATION)
  curriculums: [Curriculum!]!
}

type Curriculum {
  id: ID! @id @unique
  title: String!
  time: String
  outline: String!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  user: User!
}
